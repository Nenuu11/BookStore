@model Book
@{
    ViewData["Title"] = "Book Details";
}

<div class="w-50" style="margin:0 auto">
    <div class="card">
        <div class="card-header font-weight-bolder">
            @Model.Name Details
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Details", "Book", FormMethod.Post))
            {
                <input hidden asp-for="Id" />
                <input hidden asp-for="CopiesNumber" />
                <div class="form-group">
                    @Html.LabelFor(b => b.Name)
                    @Html.TextBoxFor(b => b.Name, new { @class = "form-control", @readonly = "readonly" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(b => b.Author)
                    @Html.TextBoxFor(b => b.Author, new { @class = "form-control", @readonly = "readonly" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(b => b.CopiesLeft)
                    @Html.TextBoxFor(b => b.CopiesLeft, new { @class = "form-control", @readonly = "readonly" })
                </div>
                @Html.LabelFor(b => b.BorrowedCopies)
                @Html.TextBoxFor(b => b.BorrowedCopies, new { @class = "form-control", @readonly = "readonly" })
                <div class="form-group">
                    @Html.LabelFor(b => b.Rate)
                    @Html.TextBoxFor(b => b.Rate, new { @class = "form-control", @readonly = "readonly" })
                </div>
                <div class="d-flex justify-content-between">
                    <div>
                        <input type="submit" value="Borrow" name="borrow" class="btn btn-outline-info"  asp-route-id="@Model.Id" />
                        <input type="submit" value="Retrieve" name="retrieve" class="btn btn-outline-info" asp-route-id="@Model.Id" />
                    </div>
                    <div>
                        <a asp-action="Index" class="btn btn-light">Back to List</a>
                    </div>
                </div>

            }
        </div>   
    </div>
</div>
